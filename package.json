{
  "name": "steal-mocha",
  "version": "1.0.0",
  "description": "A package for Mocha and StealJS",
  "main": "steal-mocha",
  "steal": {
    "plugins": [
      "steal-css"
    ],
    "meta": {
      "mocha#./mocha": {
        "format": "global",
        "exports": "mocha",
        "deps": [
          "steal-mocha/add-dom"
        ]
      }
    }
  },
  "scripts": {
    "test": "npm run testee",
    "testee": "testee test/test.html --browsers firefox --reporter Spec"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stealjs/steal-mocha.git"
  },
  "keywords": [
    "StealJS",
    "QUnit"
  ],
  "author": "Bitovi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stealjs/steal-mocha/issues"
  },
  "homepage": "https://github.com/stealjs/steal-mocha",
  "devDependencies": {
    "bower": "1.8.0",
    "grunt": "~1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-contrib-copy": "~1.0.0",
    "grunt-contrib-watch": "~1.0.0",
    "steal": "^1.0.0",
    "steal-tools": "^0.16.7",
    "testee": "^0.3.0"
  },
  "dependencies": {
    "mocha": "^3.0.2",
    "steal-css": "^1.0.0"
  }
}
